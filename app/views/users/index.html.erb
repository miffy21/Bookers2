<div class ="background-box claerfix">
	<div class="Userinfo">
		<h2>User info</h2>
		<table>
			<tr><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></tr>
			<tr>
				<th>name</th>
				<th><%= current_user.name %></th>
			</tr>
			<tr>
				<th>introduction</th>
				<th><%= current_user.introduction %></th>
			</tr>
		</table>
<p><%= link_to "edit", edit_user_path(@user) %></p>

	<h2>New book</h2>
	<% if @book.errors.any? %>
	  <div class="alert alert-warning">
	    <ul>
	      <% @book.errors.full_messages.each do |message| %>
	        <li><%= message %></li>
	      <% end %>
	    </ul>
	  </div>
	  <% end %>
	    <%= form_for(@book) do |f| %>
	     <h4>Title</h4>
	     <%= f.text_field :title %>
	     <h4>Opinion</h4>
	     <%= f.text_area :body %>
	     <br><%= f.submit 'Create Book' %></br>
	  <% end %>
	</div>

	<div class="UserBooks">
	<h2>Users</h2>
		<table>
			<thead>
			    <tr>
			      <th>image</th>
			      <th>name</th>
			      <th></th>
			    </tr>
	        </thead>
			<tbody>
				<% @users.each do |user| %>
				<tr class="new-table">
				    <td><span><%= attachment_image_tag user, :profile_image, size:"40x40", format: 'jpeg', fallback: "no_image.jpg" %></span></td>
					<td><span><%= user.name %></span></td>
					<td><span><%= link_to "show",user_path(user) %></span></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	<div>
</div>
</div>
</div>