
	<div class="col-md-3">
		<%=   flash[:notice]  %>
		<h2>User info</h2>
		<table class="table table-striped">
			<tr><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></tr>
			<tr>
				<th>name</th>
				<th><%= @user.name %></th>
			</tr>
			<tr>
				<th>introduction</th>
				<th><%= @user.introduction %></th>
			</tr>
			</table>
			<% if @user == current_user %>
			<%= link_to "", edit_user_path(@user), class: "glyphicon glyphicon-wrench pull-left btn btn-default btn-block" %>
			<% end %>

			<h2>New book</h2>
			<% if @book.errors.any? %>
			    <div class="alert alert-warning">
			    <ul>
			      <% @book.errors.full_messages.each do |message| %>
			      <li><%= message %></li>
			      <% end %>
			    </ul>
			    </div>
			    <% end %>
			    <%= form_for(@book) do |f| %>
			    <h4>Title</h4>
			    <%= f.text_field :title, class:"form-control", placeholder:"" %>
			    <h4>Opinion</h4>
			    <%= f.text_area :body, class:"form-control", placeholder:"" %>
			    <br><%= f.submit "create book", class:"btn btn-primary btn-block " %></br>
			<% end %>
	</div>

    <div class="col-md-9">
		<h2>Books</h2>
		<table class="table table-striped">
			<thead>
				<tr> 
				    <th></th>
				        <th>Title</th>
				        <th>Opinion</th>
				    </tr>
			</thead>
			<tbody>
				<% @user.books.each do |book| %>
				<tr>
					<td>
						<span><%=link_to user_path(book.user) do %>
						<%= attachment_image_tag @user, :profile_image, size:"40x40", format: 'jpeg', fallback: "no_image.jpg" %><% end %></span>
					</td>
					<td>
						<span><%= link_to book.title, "/books/#{book.id}"%></span>
					</td>
					<td>
						<span><%= book.body %><span>
					</td>
				</tr>
		        <% end %>
			</tbody>
		</table>
	</div>



