<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<header>
  <h2>Bookers</h2>
  <% if user_signed_in? %>
    <nav>
      <ul>
        <li class=""><%= link_to "Home", user_path(current_user) %></li>
        <li class=""><%= link_to "Users", users_path %></li>
        <li class=""><%= link_to "Books", books_path %></li>
        <li class=""><%= link_to "logout", destroy_user_session_path, method: :delete %></li>
      </ul>
    </nav>
  <% else %>
    <nav>
      <ul>
        <li class=""><%= link_to "Home", root_path %></li>
        <li class=""><%= link_to "About", home_about_path %></li>
        <li class=""><%= link_to "sign up", new_user_registration_path %></li>
        <li class=""><%= link_to "login", new_user_session_path %></li>
      </ul>
    </nav>
  <% end %>
</header>

    <%= yield %>

<footer>
  <h4>CopyRight Infratop.inc</h4>
</footer>
  </body>
</html>
