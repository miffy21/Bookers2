books/show

<div class ="background-box claerfix">
	<div class="Userinfo">
	<%=   flash[:notice]  %>
		<h2>User info</h2>
		<table>
			<tr><%= attachment_image_tag @userbook.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></tr>
			<tr>
				<th>Name</th>
				<th><%= @userbook.user.name %></th>
			</tr>
			<tr>
				<th>introduction</th>
				<th><%= @userbook.user.introduction %></th>
			</tr>
		</table>
		 <% if @user == current_user %>
			<%= link_to "edit", edit_user_path(@userbook.user) %>
		<% end %>
		<h2>New book</h2>
		<% if @book.errors.any? %>
		  <div class="alert alert-warning">
		    <ul>
		      <% @book.errors.full_messages.each do |message| %>
		        <li><%= message %></li>
		      <% end %>
		    </ul>
		  </div>
		  <% end %>
		  <%= form_for(@book) do |f| %>
		  <h4>Title</h4>
		  <%= f.text_field :title %>
		  <h4>Opinion</h4>
		  <%= f.text_area :body %>
		  <br><%= f.submit 'Create Book' %></br>
		  <% end %>
	</div>

	<div class ="UserBooks">
		<h2>Book detail</h2>
		<table>
		  <thead>
		    <tr>
		      <th></th>
		      <th></th>
		      <th></th>
		      <th colspan="2"></th>
		    </tr>
		  </thead>
		    <tbody>
		    	<tr>
		    		<td>
		    			<%=link_to user_path(@user) do %>
		    				<%= attachment_image_tag @userbook.user, :profile_image, size:"40x40", format: 'jpeg', fallback: "no_image.jpg" %><br>
		    				<%= @userbook.user.name %>
		    			<% end %>
		    		</td>
		    		<td><%= @userbook.title %></td>
		    		<td><%= @userbook.body %></td>
		    		<td class= "box1">
		    			<% if @user == current_user %>
	    			<%= link_to "Edit", edit_book_path(@userbook) %>
	                <%= link_to "Destroy", book_path(@userbook), method: :delete, "data-confirm" => "本当に削除しますか？" %>
	                <% end %>
	                </td>
		        </tr>
		    </tbody>
		</table>
	</div>
</div>

